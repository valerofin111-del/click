generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  name        String       @id
  key         String
  email       String?      @unique
  clicks      Int          @default(0)
  points      Int          @default(0)
  friendUser1 Friendship[] @relation("friend1")
  friendUser2 Friendship[] @relation("friend2")
  messages    Message[]    @relation("messages")
  created_At  DateTime     @default(now())
}

model Friendship {
  id         String @id @default(uuid())
  user1      User   @relation("friend1", fields: [user1_name], references: [name])
  user2      User   @relation("friend2", fields: [user2_name], references: [name])
  user1_name String
  user2_name String
  chat       Chat?  @relation("friendship")

  @@unique([user1_name, user2_name])
  @@index([user1_name])
  @@index([user2_name])
}

model Chat {
  id            String     @id @default(ulid())
  friendship    Friendship @relation("friendship", fields: [friendship_Id], references: [id], onDelete: Cascade)
  friendship_Id String     @unique
  messages      Message[]  @relation("chat")

  @@index([friendship_Id])
}

model Message {
  id         String   @id @default(uuid())
  chat       Chat     @relation("chat", fields: [chat_Id], references: [id], onDelete: Cascade)
  chat_Id    String
  user       User     @relation("messages", fields: [user_name], references: [name])
  user_name  String
  content    String
  created_At DateTime @default(now())

  @@index([chat_Id])
  @@index([user_name])
}
